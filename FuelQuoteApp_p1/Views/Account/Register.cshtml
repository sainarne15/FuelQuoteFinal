@model FuelQuoteApp_p1.Models.Account.Register
@{
    ViewData["Title"] = "Register";
}
<link type="text/css" rel="stylesheet" href="styles/bootstrap.min.css">
<script src="script/bootstrap.min.js"></script>
<script src="script/jquery-1.10.2.min.js"></script>
<style>
    .panel-title
    {
        color:#DA252A !important;
    }
    .btn
    {
       background-color:#DA252A !important;
       border-radius:20px;
       border-color:#DA252A !important;
    }
</style>
<div id="reg_page"">
<div class="container">
    <div class="row centered-form" style="margin-top: 150px;">
        <div class="col-md-6">
            <div>
               <div id="img_reg">
                    <img src="https://thumbs.dreamstime.com/b/register-now-cursor-button-internet-icon-pointer-click-vector-stock-illustration-200716427.jpg" alt="Trulli" width="300" height="300">
                </div>
            </div>
            <blockquote style="color: #2735d9;">
              
            </blockquote>
        </div>
        <div class="col-md-6">
             
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        REGISTER
                    </h3>
                </div>
                <div class="panel-body">
                    <form role="form" asp-action="Register" asp-controller="Account" method="post">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control input-sm" placeholder="User Name">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control input-sm" placeholder="Email">
                                    <span asp-validation-for="Email" class=" text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control input-sm" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control input-sm" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <lablel>Password must contain an uppercase character, lowercase character, a digit, and a non-alphanumeric character.</lablel>
                        </div>
                        <input type="submit" value="Register" class="btn btn-info btn-block">
                    </form>
                </div>
            </div>
            <span>Already have an account?</span> <a asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
        </div>
    </div>
</div>
</div>
