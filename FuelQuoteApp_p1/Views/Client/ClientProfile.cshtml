@model FuelQuoteApp_p1.Models.Client_Profile.Profile


@{
    ViewData["Title"] = "ClientProfile";
}

<link type="text/css" rel="stylesheet" href="styles/bootstrap.min.css">
<script src="script/bootstrap.min.js"></script>
<script src="script/jquery-1.10.2.min.js"></script>
<style>
#update_btn
{
    border-radius:20px;
    background-color:#DA252A;
    color:white;
    border-color:#DA252A;
}
#title
{
    color:#DA252A;
    font-family:'futura';
    font-weight:bold;

}
#panel_box
{
    margin-left:-200px;
}

</style>

<div class="container">
    <div class="row centered-form" style="margin-top: 150px;">
        <div class="col-md-6">
            <div>
                <h1 style="color:#4d709e">Client Profile</h1>
            </div>
            <div>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQyHBZ6kuFIVfcozQr297qahe7em9iQX091yDsZYb2pyOZq80_1RQ1rc_pgwBd8IMBO3tQ&usqp=CAU" alt="image" width="100" height="100">
        </div>
            <blockquote style="color: #4d709e;">
                <p>
                    Complete your Profile!
                </p>
            </blockquote>
        </div>
        
        <div class="col-md-6">
            <div class="panel panel-default" id="panel_box">
                <div class="panel-heading">
                    <h3 class="panel-title" id="title">
                        We would love to know you more!
                    </h3>
                </div>
                <div class="panel-body">
                    <form role="form" asp-action="ClientProfile" asp-controller="Client" method="post">
                        <div class="form-group">
                            <input asp-for="FullName" class="form-control input-sm" placeholder="Full Name">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input asp-for="Address1" class="form-control input-sm" placeholder="Address1">
                                    <span asp-validation-for="Address1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">

                                    <input asp-for="Address2" class="form-control input-sm" placeholder="Address2">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="City" class="form-control input-sm" placeholder="City">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<FuelQuoteApp_p1.Models.Client_Profile.States>()">
                                <option value="">Select State</option>
                            </select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ZipCode" class="form-control input-sm" placeholder="ZipCode">
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Update" class="btn btn-info btn-block" id="update_btn">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>